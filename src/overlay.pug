      <input type="radio" id="stf-png" name="stf-format" value="png" checked>
      <label for="stf-png">PNG</label><br>
      <input type="radio" id="stf-jpg" name="stf-format" value="jpg">
      <label for="stf-jpg">JPG</label><br>
      br
      

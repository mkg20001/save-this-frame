      <input type="radio" id="stf-screen" name="stf-size" value="screen">
      <label for="stf-screen">Screen Size</label><br>
      <input type="radio" id="stf-custom" name="stf-size" value="custom">
      <label for="stf-custom">Custom (WIP)</label><br>
